{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "justMyCode": true
        },
        {
            "name": "Webapp Dev Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--no-color",
                "--noreload",
                "--nostatic",
                "--nothreading"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}
